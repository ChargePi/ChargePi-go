{
  "chargePoint": {
    "connectionSetings": {
      "id": "ChargePi",
      "protocolVersion": "1.6",
      "serverUri": "example.com",
      "tls": {
        "isEnabled": false,
        "CACertificatePath": "/usr/share/certs/rootCA.crt",
        "clientCertificatePath": "/usr/share/certs/charge-point.crt",
        "clientKeyPath": "/usr/share/certs/charge-point.key"
      }
    },
    "info": {
      "maxChargingTime": 5,
      "freeMode": false,
      "type": "AC",
      "maxPower": 3.3,
      "ocpp": {
        "vendor": "xblaz3kx",
        "model": "ChargePi"
      }
    },
    "logging": {
      "type": [
        "file"
      ]
    },
    "hardware": {
      "lcd": {
        "isEnabled": false,
        "driver": "hd44780",
        "language": "en",
        "i2c": {
          "address": "0x27",
          "bus": 1
        }
      },
      "tagReader": {
        "isEnabled": false,
        "readerModel": "PN532",
        "device": "/dev/ttyS0",
        "resetPin": 19
      },
      "ledIndicator": {
        "enabled": false,
        "dataPin": 18,
        "indicateCardRead": true,
        "type": "WS281x",
        "invert": false
      }
    }
  }
}